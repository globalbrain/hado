{
  "name": "@globalbrain/hado",
  "version": "0.1.8",
  "exports": {
    "./router": "./src/router.ts"
  },
  "publish": {
    "include": [
      "*.md",
      "src/**/*.ts"
    ]
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "imports": {
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.4",
    "@david/dax": "jsr:@david/dax@^0.41.0",
    "@std/assert": "jsr:@std/assert@^0.225.3",
    "@std/fmt": "jsr:@std/fmt@^0.225.1",
    "@std/fs": "jsr:@std/fs@^0.229.1",
    "@std/net": "jsr:@std/net@^0.224.1",
    "@std/path": "jsr:@std/path@^0.225.1",
    "@std/regexp": "jsr:@std/regexp@^0.224.1",
    "@std/semver": "jsr:@std/semver@^0.224.0",
    "chokidar": "npm:chokidar@^3.6.0"
  },
  "tasks": {
    "format": "deno fmt",
    "format:fail": "deno fmt --check",
    "lint": "deno lint --fix",
    "lint:fail": "deno lint",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "check": "deno task format:fail && deno task lint:fail && deno task test",
    "release": "deno run -A ./scripts/release.ts"
  },
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true
  }
}
