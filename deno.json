{
  "name": "@globalbrain/hado",
  "version": "0.19.0",
  "exports": {
    "./router": "./src/router.ts",
    "./sentry": "./src/sentry.ts",
    "./utils": "./src/utils.ts"
  },
  "publish": {
    "include": [
      "*.md",
      "deps.ts",
      "src/**/*.ts"
    ]
  },
  "tasks": {
    "format": "deno fmt",
    "format:fail": "deno fmt --check",
    "lint": "deno lint --fix",
    "lint:fail": "deno lint",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "type": "deno check **/*.ts",
    "check": "deno task format:fail && deno task lint:fail && deno task type && deno task test",
    "release": "deno run -A ./scripts/release.ts",
    "update": "deno run -A ./scripts/update.ts -x esbuild && deno task check"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "lineWidth": 120,
    "proseWrap": "preserve",
    "semiColons": false,
    "singleQuote": true
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended",
        "jsr"
      ],
      "exclude": [
        "no-import-prefix"
      ]
    }
  },
  "imports": {},
  "unstable": [
    "broadcast-channel"
  ]
}
